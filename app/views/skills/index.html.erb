<h1>Listing skills</h1>


<p>Download: 
|
<%# link_to "technologyDownload as (Excel)", skills_path(format: "xlsx") %> |
<%= link_to "Download as (Word)", skills_path(format: "docx") %></p>


<table>
  <thead>
    <tr>
      <th>Technology</th>
      <th>Profiency</th>
      <th>Scale</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.technology %></td>
        <td><%= skill.profiency %></td>
        <td><%= skill.scale %></td>
        <td><%= link_to 'Show', skill %></td>
        <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
        <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Skill', new_skill_path , :class =>"waves-effect waves-light btn"%>
