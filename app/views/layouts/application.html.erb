<!DOCTYPE html>
<html>
<head>
  <title>iConsulting</title>


  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>


  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <nav>
    <div class="nav-wrapper">
      <%= link_to "iConsulting", root_path %>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
          <% if user_signed_in? %>
          <li><%= link_to " My Skills" , skills_path  ,  :class => "waves-effect waves-light btn-large" %></li>
          <li> Logged in as <strong><%= current_user.email %></strong> </li>
          <li class="active"><%= link_to "log out #{current_user.name}", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
          <li> <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |</li>
          <% else %>
          <% if company_signed_in? %>
          <li class="active">  <%= link_to "DASHBOARD", admin_index_path ,  :class => "waves-effect waves-light btn-large" %> </li>
          <li>
           <%= link_to "Logout", destroy_company_session_path, method: :delete, :class => 'navbar-link'  %></li>
          <% else %>

          <li><%= link_to "Company Login", new_company_session_path, :class => 'navbar-link'  %></li>
          <li><%= link_to "Company Sign up", new_company_registration_path, :class => 'navbar-link'  %> |</li>

          <% end %>


          <li><%= link_to "Client Sign up", new_user_registration_path, :class => 'navbar-link'  %> |</li>
          <li><%= link_to " Client Login", new_user_session_path, :class => 'navbar-link'  %></li>
          <% end %>
      </ul>
  </div>
</nav>


<% if notice %><p class="alert alert-success"><%= notice %></p><% end %>
<% if alert %><p class="alert alert-error"><%= alert %></p><% end %>





<div class="container">
    <%= yield %>
</div>

